pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                echo "Building docker container"
                echo "tagging docker image"
                echo "${BRANCH_NAME}"
                echo "hello world"
            }
        }
        stage("test"){
            when {
                expression {
                    BRANCH_NAME == "dev"
                }
            }
            steps{
                echo "testing the application"
            }
        }
    }
    post{
        always{
            echo "build completed"
        }
        success{
            echo "build success"
        }
        failure{
            echo "build failed"
        }
    }
}