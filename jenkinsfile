pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                echo "Building docker container"
                echo "tagging docker image"
                echo "${BRANCH_NAME}"
                ech "hello world"
            }
        }
    }
    post{
        always{
            echo "build completed"
        }
        success{
            echo "build success"
        }
        failure{
            echo "build failed"
        }
    }
}